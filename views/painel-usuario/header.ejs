<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><%= breadcrumb.at(-1) %></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <% breadcrumb.forEach((crumbs)=> { %>
                        <li class="breadcrumb-item">
                            <a href="/painel-usuario"> <!-- generalizar os links com a sessão do usuário-->
                                <%= crumbs %>
                            </a>
                        </li>
                    <% });%>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div><!-- /.content-header -->
<script>
    let item = document.querySelectorAll('breadcrumb-item').at(-1);
    item.className = "breadcrumb-item active";
    item.innerHTML = item.textContent;
</script>