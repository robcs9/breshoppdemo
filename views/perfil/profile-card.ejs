<div class="card card-outline">
    <div class="card-body box-profile">
        <div class="text-center">
            <img class="profile-user-img img-fluid img-circle"
                src="/img/<%= usuario.foto %>" alt="User profile picture">
        </div>

        <h3 class="profile-username text-center">
            <%= usuario.nome + " " + usuario.sobrenome %>
        </h3>

        <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
                <b>Vendas</b> <a class="float-right">
                    <%= usuario.vendas %>
                </a>
            </li>
            <li class="list-group-item">
                <b>Trocas</b> <a class="float-right">
                    <%= usuario.trocas %>
                </a>
            </li>
            <li class="list-group-item">
                <b>Telefone</b> <a class="float-right">
                    <%= usuario.telefone %>
                </a>
            </li>
            <li class="list-group-item">
                <b>Email</b> <a class="float-right">
                    <%= usuario.email %>
                </a>
            </li>
        </ul>

        <!--<a href="#" class="btn btn-primary btn-block"><b>Reviews</b></a>-->
    </div>
    <!-- /.card-body -->
</div>