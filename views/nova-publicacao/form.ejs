<form action="/painel-usuario/nova-publicacao-form" method="post" enctype="multipart/form-data">
    <div class="card card-outline">
        <div class="card-header">
            <h3 class="card-title">Preencha com os dados da publicação do seu produto</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="titulo">Título da Publicação</label>
                <input type="text" id="titulo" name="titulo" class="form-control">
            </div>
            <div class="form-group">
                <label for="descricao_produto">Descrição</label>
                <textarea id="descricao_produto" name="descricao_produto" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group">
                <label for="tipo_negociacao">Tipo de Negociação</label>
                <select id="tipo_negociacao" name="tipo_negociacao" class="form-control custom-select">
                    <option selected="" disabled="">Selecione uma</option>
                    <option id="venda" value="venda" >Venda</option>
                    <option id="troca" value="troca">Troca</option>
                </select>
            </div>
            <div class="form-group">
                <label for="preco">Preço ou item(s) de troca desejado(s)</label>
                <input type="text" id="preco" name="preco" class="form-control">
            </div>
            <div class="form-group">
                <label for="id_categoria">Categoria</label>
                <!-- <select id="tipo_negociacao" name="tipo_negociacao" class="form-control custom-select"> -->
                <select id="id_categoria" name="id_categoria" multiple class="form-control custom-select">
                    <option selected="" disabled="">Selecione uma</option>
                    <% for(elem of categorias) { %>
                        <option id="categoria-<%= elem.id %>" value="<%= elem.id %>"><%= elem.nome %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="descricao_vendedor">Informações do Anunciante</label>
                <textarea id="descricao_vendedor" name="descricao_vendedor" class="form-control" rows="4"
                    placeholder="Informações adicionais sobre si mesmo."></textarea>
            </div>
            <!-- /.form-group-->
        </div>
