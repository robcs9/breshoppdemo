<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories" style="background-color: rgb(255, 255, 255); --darkreader-inline-bgcolor: #181a1b;" data-darkreader-inline-bgcolor="">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Categorias</span>
                    </div>
                    <ul id="listaCategorias">
                        <% if(locals.categorias) { %>
                            <% categorias.forEach((elem) => { %>
                                <li id="categoria-<%= elem.id %>">
                                    <a href="/categoria/<%= elem.nome %>#featured">
                                        <%= elem.nome %>
                                    </a>
                                </li>
                            <% }); %>
                        <% } %>
                    </ul>
                
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form" style="background-color: rgb(255, 255, 255); --darkreader-inline-bgcolor: #181a1b;" data-darkreader-inline-bgcolor="">
                        <%- include('formBusca') %>
                    </div>
                </div>
                <h4>Publicações mais recentes</h4>
                <%- include('featured') %>
            </div>
        </div>
    </div>
</section>